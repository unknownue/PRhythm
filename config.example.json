{
  "general": {
    "timezone": "Asia/Shanghai"
  },
  "github": {
    "repositories": [
      "owner/repo1",
      "owner/repo2"
    ],
    "check_interval": 3600,
    "token": ""
  },
  "llm": {
    "provider": "openai",
    "temperature": 0.3,
    "providers": {
      "openai": {
        "base_url": "https://api.openai.com/v1",
        "api_key": "",
        "model": "gpt-4"
      },
      "deepseek": {
        "base_url": "https://api.deepseek.com",
        "api_key": "",
        "model": "deepseek-chat",
        "max_tokens": 8192
      }
    }
  },
  "paths": {
    "repos_dir": "./repos",
    "output_dir": "./output",
    "analysis_dir": "./analysis"
  },
  "output": {
    "languages": ["en"]
  },
  "viewer": {
    "enabled": true,
    "port": 8080,
    "debug": false
  }
} 